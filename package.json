{
  "name": "hora-openrouteservice-automation",
  "version": "1.0.0",
  "description": "Production-ready Test Automation Framework for HORA Services - OpenRouteService Demo",
  "main": "index.js",
"scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui", 
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:mobile": "playwright test --project='Mobile Safari (iPhone 13)' --project='Mobile Chrome (Pixel 5)'",
    "test:smoke": "playwright test --grep @smoke",
    "test:logistics": "playwright test --grep @logistics",
    "report:open": "playwright show-report",
    "report:allure": "allure generate allure-results --clean && allure open",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.{ts,feature}\""
  },
  "keywords": [
    "playwright",
    "bdd",
    "typescript",
    "automation",
    "logistics",
    "testing"
  ],
  "author": "HORA Services QA Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^22.0.0",
    "allure-commandline": "^2.29.0",
    "allure-playwright": "^3.0.0",
    "eslint": "^8.57.0",
    "playwright-bdd": "^7.0.0",
    "prettier": "^3.3.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
